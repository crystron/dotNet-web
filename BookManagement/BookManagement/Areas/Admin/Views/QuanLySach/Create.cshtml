@model BookManagement.Models.Sach
@using BookManagement.Models
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("CreateSach", "QuanLySach", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-6">
            <div class="box-body">
                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Mã Sách</label>
                    <input type="text" class="form-control" id="MaSach" name="MaSach" placeholder="Mã Sách" style="border-radius: 0;box-shadow:none; border-color: #d2d6de;">
                    @Html.ValidationMessageFor(model => model.MaSach, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Tên Sách</label>
                    <input type="text" class="form-control" id="TenSach" name="TenSach" placeholder="Tên Sách" style="border-radius: 0;box-shadow:none; border-color: #d2d6de;">
                    @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Giá Tiền</label>
                    <input type="text" class="form-control" id="GiaTien" name="GiaTien" placeholder="Giá Tiền" style="border-radius: 0;box-shadow:none; border-color: #d2d6de;">
                    @Html.ValidationMessageFor(model => model.GiaTien, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Số Lượng</label>
                    <input type="text" class="form-control" id="SL" name="SL" placeholder="Số Lượng" style="border-radius: 0;box-shadow:none; border-color: #d2d6de;">
                    @Html.ValidationMessageFor(model => model.SL, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Hình Ảnh</label>
                    <input type="text" class="form-control" id="Hinh" name="Hinh" placeholder="Hình Ảnh" style="border-radius: 0;box-shadow:none; border-color: #d2d6de;">
                    @Html.ValidationMessageFor(model => model.Hinh, "", new { @class = "text-danger" })
                </div>
                <!-- /.box-body -->
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Thêm mới</button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="box-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Danh Mục</label>
                    <select class="form-control" style="border-radius: 0;box-shadow:none; border-color: #d2d6de;" name="madanhmuc" id="madanhmuc">
                        @foreach (var item in (List<DanhMuc>)ViewBag.danhmuc)
                        {
                            <option id="@item.MaDM" value="@item.MaDM">@item.TenDM</option>
                        }
                    </select>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Thể Loại</label>
                    <select class="form-control" style="border-radius: 0;box-shadow:none; border-color: #d2d6de;" name="maloaisanpham" id="maloaisanpham">
                        @foreach (var item in (List<TheLoai>)ViewBag.theloai)
                        {
                            <option id="@item.MaTL" value="@item.MaTL">@item.TenTL</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Tác Giả</label>
                    <select class="form-control" style="border-radius: 0;box-shadow:none; border-color: #d2d6de;" name="maloaisanpham" id="maloaisanpham">
                        @foreach (var item in (List<TacGia>)ViewBag.tacgia)
                        {
                            <option id="@item.MaTG" value="@item.MaTG">@item.TenTG</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Nhà Xuất Bản</label>
                    <select class="form-control" style="border-radius: 0;box-shadow:none; border-color: #d2d6de;" name="maloaisanpham" id="maloaisanpham">
                        @foreach (var item in (List<NXB>)ViewBag.nxb)
                        {
                            <option id="@item.MaNXB" value="@item.MaNXB">@item.TenNXB</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>
}


